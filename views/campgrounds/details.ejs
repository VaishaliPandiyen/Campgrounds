<% layout('layouts/boilerplate') %>

<div class="details_box_wrapper">
  <!-- <div class="details_box"> -->
  <div class="showPage_box">
    <img class="showPage_img" src="<%= campground.image %>" />
    <h1 class="showPage_h1"><%= campground.title.toUpperCase() %></h1>
    <h2 class="showPage_h2"><%= campground.location %></h2>
    <h3 class="showPage_h3">$<%= campground.price %>/night</h3>
    <p><%= campground.description %></p>
    <% if (campground.amenities.length > 0) { %>
    <p class="sP_Amenities">Amenities</p>
    <% }%>
    <div class="sP_amenitiesWrapper">
      <% for (let amenity of campground.amenities) {%>
      <div class="sP_eachAmenity">
        <form
          action="/campgrounds/<%=campground._id%>/amenities/<%=amenity._id%>?_method=DELETE"
          method="POST"
          style="display: inline-block"
        >
          <button class="sP_amenity_delete">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="10"
              height="10"
              fill="lightgrey"
              class="bi bi-x-square"
              viewBox="0 0 16 16"
            >
              <path
                d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"
              />
              <path
                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
              />
            </svg>
          </button>
        </form>
        <div class="sp_amenityHeading_wrapper">
          <p class="sp_amenityHeading"><%= amenity.facility%></p>
        </div>
        <% if (amenity.trail == "Available") { %>
        <p class="sP_key">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-check2-square"
            viewBox="0 0 16 16"
          >
            <path
              d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"
            />
            <path
              d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"
            />
          </svg>
          Trail
          <!-- : <span><%= amenity.trail%></span> -->
        </p>
        <% } %> <% if (amenity.guides == "Available") { %>
        <p class="sP_key">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-check2-square"
            viewBox="0 0 16 16"
          >
            <path
              d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"
            />
            <path
              d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"
            />
          </svg>
          Guides
          <!-- : <span><%= amenity.guides%></span> -->
        </p>
        <% } %> <% if (amenity.conductor == "Available") { %>
        <p class="sP_key">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-check2-square"
            viewBox="0 0 16 16"
          >
            <path
              d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"
            />
            <path
              d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"
            />
          </svg>
          Conductor
          <!-- : <span><%= amenity.conductor%> </span> -->
        </p>
        <% } %> <% if (amenity.equipments == "Available") { %>
        <p class="sP_key">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-check2-square"
            viewBox="0 0 16 16"
          >
            <path
              d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"
            />
            <path
              d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"
            />
          </svg>
          Equipments
          <!-- : <span><%= amenity.equipments%></span> -->
        </p>
        <% } else if (amenity.equipments == "Bring your own") { %>
        <p class="sP_key">
          BRING:
          <span><%= amenity.things_to_carry%></span>
        </p>
        <% } %>
        <div style="margin-top: auto">
          <hr />
          <% if (amenity.contact_person) { %>
          <p class="sP_key">
            <span style="font-weight: 600">Contact:</span> <%=
            amenity.contact_person%>
          </p>
          <% if (amenity.contact_number) { %>
          <p class="sP_key"><%= amenity.contact_number%></p>
          <% } %> <% } else { %>
          <p class="sP_key" style="color: rgba(240, 248, 255, 0.3)">
            No contact info available
          </p>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <div class="showPage_actions">
      <a
        class="details_btn"
        href="/campgrounds/<%=campground._id%>/edit"
